[user]
	name = Georgi Dimitrov
	email = georgijd92@gmail.com
[core]
	editor = vim
	mergeoptions = --no-edit
[push]
	default = simple
[pull]
	rebase = true
[alias]
	hfemail = config user.email "georgi.dimitrov@headforwards.com"
	ls = ls-files --full-name -st
	tree = log --graph --date=local --pretty=format:'%Cgreen%ad%Creset %Cred%h%Creset %an: %s %Creset %C(yellow)%d%Creset' --all
	st = status --u=all
	b = branch
	ch = checkout
	co = commit
	find = !git log -p -S     
[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto
[color "branch"]
    current = yellow
    local = blue
    remote = magenta
[color "diff"]
    meta = blue
    frag = magenta
    old = red bold
    new = green bold
[color "status"]
    added = green bold
    changed = yellow bold
    deleted = red bold
    untracked = blue bold
[pager]
    log = .diff-highlight | less
    show = .diff-highlight | less
    diff = .diff-highlight | less
